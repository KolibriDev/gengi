
calculator(v-show='app.view === "calc"')
  currency(v-attr='symbol:app.currentCurrency')
    curr-input
      //- input(id='amountCurr' v-model='app.amountCurr | float' placeholder='1')
      value(v-text='app.amountCurr | float')
  currency(symbol='ISK')
    curr-input
      //- input(id='amountISK' v-model='app.amountISK' v-on='keydown:calculate')
      value(v-text='app.amountISK | float')

  numpad
    num(key='1' v-on='click: numPad')
    num(key='2' v-on='click: numPad')
    num(key='3' v-on='click: numPad')
    num(key='4' v-on='click: numPad')
    num(key='5' v-on='click: numPad')
    num(key='6' v-on='click: numPad')
    num(key='7' v-on='click: numPad')
    num(key='8' v-on='click: numPad')
    num(key='9' v-on='click: numPad')
    num(key=',' v-on='click: numPad')
    num(key='0' v-on='click: numPad')
    num(key='del' v-class='available: app.amountCurr.toString().length > 0' v-on='click: numPad')
