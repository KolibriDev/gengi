currency-list

  div.list
    template(name='list-item')
      currency(attr='code' template route='calculator')
        curr-drag: include ../../img/svg-drag.svg
        curr-code(tpl='code')
        curr-name(tpl='name')
        curr-rate(tpl='rate' attr='low')
        curr-selected(attr='onhome')
          include ../../img/svg-addremove.svg
  div.allcurrencies
    currency(code='globe' template route='allcurrencies')
      curr-symbol
        .globe: include ../../img/svg-globe.svg
        .plus: include ../../img/svg-plus.svg
      curr-code(title='Allar myntir')
        span.alt Bæta við
      curr-name Setja aðra mynt á forsíðu
      curr-next
        include ../../img/svg-next.svg

  div(route='about' title='Um Gengi.is').footer
    hr
    include ../../img/svg-kolibri-flower.svg
    hr
