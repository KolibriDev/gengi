currency-list

  div
    template(name='list-item')
      currency(attr='code' template route='calculator')
        curr-drag: include ../../img/svg-drag.svg
        curr-code(tpl='code')
        curr-name(tpl='name')
        curr-rate(tpl='rate' attr='low')
        curr-selected(attr='onhome')
          include ../../img/svg-add.svg
          include ../../img/svg-remove.svg

    template(name='all-currencies')
      currency(attr='code' template route='allcurrencies')
        curr-symbol: include ../../img/svg-globe.svg
        curr-code(tpl='name')

  div(route='about' title='Um Gengi.is').footer
    hr
    include ../../img/svg-kolibri-flower.svg
    hr
