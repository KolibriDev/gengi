{
  "version": "1.0.0-rc.3",
  "defaultEnv": "development",
  "envdir": {
    "development": "./dev/",
    "production": "./dist/"
  },
  "cmd": {},
  "server": {
    "port": "1337",
    "uiport": "1338",
    "ghostMode": {
      "clicks": "true",
      "forms": "true",
      "scroll": "true"
    }
  },
  "templates": {
    "watchSrc": "./src/views/**/*.jade",
    "src": [
      "./src/views/**/*.jade",
      "!./src/views/**/_*.jade"
    ],
    "jade": {
      "pretty": false
    }
  },
  "scripts": {
    "src": [
      "./src/js/**/*.js",
      "!./src/js/modules/**/*.js"
    ],
    "jsFilter": "**/*.js",
    "lint": {
      "config": "./.jshintrc",
      "src": [
        "./src/js/**/*.js",
        "!./src/js/modules/**/*.js",
        "!./src/**/vendor/**/*"
      ]
    },
    "subDir": "js/"
  },
  "babel": {
    "src": ["./src/js/modules/**/*.js"],
    "config": {
      "modules": "amd"
    },
    "lint": {
      "config": "./.jshintrc",
      "src": [
        "./src/js/modules/**/*.js"
      ]
    },
    "subDir": "js/modules"
  },
  "manifest": {
    "src": [
      "**/*",
      "**/main.js",
      "!**/img/icon/**/*",
      "!**/img/load/**/*"
    ],
    "options": {
      "hash": true,
      "filename": "manifest.appcache",
      "fallback": ["/ /offline.html"],
      "network": ["*"],
      "exclude": [
        "manifest.appcache",
        "**/img/**/*",
        "**/fonts/**/*.woff",
        "**/fonts/**/*.woff2"
      ]
    }
  },
  "images": {
    "src": "./src/img/**/*.{png,gif,jpg,jpeg}",
    "imgFilter": "**/*.{png,gif,jpg,jpeg}",
    "subDir": "img/"
  },
  "styles": {
    "watchSrc": "./src/scss/**/*.scss",
    "src": "./src/scss/*.scss",
    "cssFilter": "**/*.css",
    "scssFilter": "**/*.scss",
    "srcDir": "./src/scss/",
    "subDir": "css/",
    "autoprefixer": {
      "browsers": [
        "ie >= 10",
        "> 1%",
        "last 2 versions",
        "Firefox ESR",
        "Opera 12.1"
      ],
      "cascade": false
    }
  },
  "svg": {
    "src": "./src/img/**/*.svg",
    "subDir": "img/"
  },
  "ico": {
    "src": "./src/img/**/*.ico",
    "subDir": "img/"
  },
  "fonts": {
    "src": "./src/fonts/**",
    "subDir": "fonts/"
  },
  "videos": {
    "src": "./src/videos/**",
    "subDir": "videos/"
  },
  "bower": {
    "jsDest": "./src/js/vendor/",
    "imgDest": "./src/img/vendor/",
    "scssDest": "./src/scss/vendor/"
  }
}
