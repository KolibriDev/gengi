{
  "version": "0.1.0",
  "env": {
    "development": {
      "dir": "./dev/"
    },
    "production": {
      "dir": "./dist/"
    }
  },
  "cmd": {
    "deploy-stage": "./bin/deploy-stage.sh",
    "deploy-live": "./bin/deploy-live.sh",
    "require": "./bin/require.sh"
  },
  "connect": {
    "port": "1337",
    "livereload": true
  },
  "templates": {
    "watchSrc": "./src/views/**/*.jade",
    "src": [
      "./src/views/**/*.jade",
      "!./src/views/**/_*.jade"
    ]
  },
  "scripts": {
    "src": "./src/js/**/*.{js,map}",
    "jsFilter": [
      "**/*.js",
      "**/*.map"
    ],
    "lint": {
      "config": "./.jshintrc",
      "filter": [
        "**/*.js",
        "!**/vendor/**/*"
      ]
    },
    "subDir": "js/"
  },
  "manifest": {
    "filename": "manifest.appcache",
    "src": [
      "**/*",
      "**/main.js",
      "!**/img/icon/**/*",
      "!**/img/load/**/*"
    ],
    "exclude": [
      "manifest.appcache",
      "**/js/init/*.js",
      "**/js/kolibri/*.js",
      "**/js/utils/*.js",
      "**/js/vendor/*.js",
      "**/js/gengi.js"
    ],
    "fallback": ["/ /offline.html"],
    "network": [
      "*"
    ]
  },
  "images": {
    "src": "./src/img/**/*.{png,gif,jpg,jpeg}",
    "imgFilter": "**/*.{png,gif,jpg,jpeg}",
    "subDir": "img/"
  },
  "styles": {
    "watchSrc": "./src/scss/**/*.scss",
    "src": "./src/scss/*.scss",
    "cssFilter": "**/*.css",
    "scssFilter": "**/*.scss",
    "srcDir": "./src/scss/",
    "subDir": "css/"
  },
  "svg": {
    "src": "./src/img/**/*.svg",
    "subDir": "img/"
  },
  "ico": {
    "src": "./src/img/**/*.ico",
    "subDir": "img/"
  },
  "fonts": {
    "src": "./src/fonts/**",
    "subDir": "fonts/"
  },
  "videos": {
    "src": "./src/videos/**",
    "subDir": "videos/"
  },
  "bower": {
    "jsDest": "./src/js/vendor/",
    "imgDest": "./src/img/vendor/",
    "scssDest": "./src/scss/vendor/"
  }
}
